<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.note.NoteFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_item_note"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:layout_marginBottom="-4dp"
                android:background="@drawable/date_background"
                app:layout_constraintBottom_toBottomOf="@+id/storyDate"
                app:layout_constraintEnd_toEndOf="@+id/storyDate"
                app:layout_constraintStart_toStartOf="@+id/storyDate"
                app:layout_constraintTop_toTopOf="@+id/storyDate" />

            <TextView
                android:id="@+id/storyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/caloriewise"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/img_item_note"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_note_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_item_note"
                app:layout_constraintTop_toTopOf="@+id/img_item_note"
                tools:text="@string/note_name" />

            <TextView
                android:id="@+id/tv_note_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="5"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_note"
                app:layout_constraintEnd_toEndOf="@+id/tv_note_title"
                app:layout_constraintStart_toStartOf="@+id/tv_note_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_note_title"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@string/note_desc" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
